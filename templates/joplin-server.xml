<?xml version="1.0"?>
<Container version="2">
  <Name>joplin-server</Name>
  <Repository>joplin/server:latest</Repository>
  <Registry>https://hub.docker.com/r/joplin/server/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://forums.unraid.net/topic/194050-support-bigsing-docker-templates/</Support>
  <Project>https://joplinapp.org/</Project>
  <Overview>Official Joplin Server Docker Image</Overview>
  <Category>Productivity</Category>
  <WebUI>http://[IP]:[PORT:22300]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/bigsing/unraid-templates/refs/heads/main/images/joplin-logo.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="WebUI" Target="22300" Default="22300" Mode="tcp" Description="WebUI" Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="APP_PORT" Target="APP_PORT" Default="22300" Mode="tcp" Description="WebUI Port" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="APP_BASE_URL" Target="APP_BASE_URL" Default="http://[IP]:22300" Description="Application Base URL" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="DB_CLIENT" Target="DB_CLIENT" Default="pg" Description="Database Client - pg = postgres" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="POSTGRES_HOST" Target="POSTGRES_HOST" Default="[IP]" Description="Database Host" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="POSTGRES_DATABASE" Target="POSTGRES_DATABASE" Default="joplindb" Description="Database Name" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="POSTGRES_PORT" Target="POSTGRES_PORT" Default="5432" Description="Database Port" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="POSTGRES_USER" Target="POSTGRES_USER" Default="joplin" Description="Database Name" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="POSTGRES_PASSWORD" Target="POSTGRES_PASSWORD" Default="" Description="Database Password" Type="Variable" Display="always" Required="true" Mask="true"/>
  <TailscaleStateDir/>
</Container>